<ul id="subjects">
  <% @subjects.each do |c| %>
  <li>
    <%= link_to c.name, :action => "show_subjects", :id => c.id %>
  </li>
  <% end %>
</ul>

<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the books currently in the system</p>

<ul id="books">
  <% @books.each do |c| %>
  <li>
    <%= link_to c.title, {:action => 'show', :id => c.id} %> -
    <strong> <%= link_to 'Edit', {:action => "edit", :id => c.id} %></strong>
    <strong> <%= link_to 'Remove', {:action => "delete", :id => c.id}, :confirm => "Are you sure you want to remove this book?" %></strong>
  </li>
  <% end %>
</ul>

<% end %>
<hr>
<p><%= link_to "Add New Book", {:action => 'new'}%></p>
